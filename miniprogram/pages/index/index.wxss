.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
.navContainer {
  display: flex;
}
.navContainer .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #f01313;
  color: #fff;
  font-size: 50rpx;
  margin: 20rpx 0;
}
.navItem text {
  font-size: 26rpx;
}
.recommendContainer {
  padding: 30rpx 20rpx 20rpx 20rpx;
}
.recommendScroll {
  display: flex;
  height: 300rpx;
}
.recommendScroll .scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.recommendScroll .scrollItem image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
}
.recommendScroll .scrollItem text {
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.topList {
  padding: 20rpx 0;
}
.topList .topSwiper {
  height: 450rpx;
}
.topList .swiperItem {
  width: 96%;
  background: #fbfbfb;
}
.topList .swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.topList .swiperItem .musicItem {
  display: flex;
  margin-top: 20rpx;
}
.topList .swiperItem .musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.topList .swiperItem .musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.topList .swiperItem .musicItem .musicName {
  line-height: 100rpx;
  height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
